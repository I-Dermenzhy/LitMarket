@model Genre

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id == 0 ? "Create" : "Update") Genre</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="row p-1">
                    <label asp-for="Name" class="p-1 ps-2" style="font-weight:bold"></label>
                    <input asp-for="Name" class="form-control border" />                     
                    <span asp-validation-for="Name" class="text-danger mt-1"></span>
                </div>
                <div class="row p-1 mb-4">
                    <label asp-for="DisplayOrder" class="p-1 ps-2" style="font-weight:bold"></label>
                    <input asp-for="DisplayOrder" class="form-control border" />
                    <span asp-validation-for="DisplayOrder" class="text-danger mt-1"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
                    </div>
                    <div class="flex-grow-1"></div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control border">@(Model.Id == 0 ? "Create" : "Update")</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ExtraSpace" />

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/> 
    }
}

                        